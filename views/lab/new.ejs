<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/css/labform.css">
    
    <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h3>Add New Lab</h3>
                        <p>Fill in the data below.</p>
                        <form class="requires-validation" action="/lab" method="post">
                            
                            <div class="col-md-12">
                                <input  class="form-control" type="text" id="name" name="lab[name]" placeholder="Lab Name" required>
                               </div>

                            <div class="col-md-12">
                                <!-- <input class="form-control" type="email" name="email" placeholder="E-mail Address" required> -->
                                <input class="form-control" type="text" id="department" name="lab[department]" placeholder="Department" required>
                                 </div>

                           <div class="col-md-12">
                            <input class="form-control" type="text" id="capacity" name="lab[capacity]" placeholder="Lab Capacity" required>
                                </div>


                           <div class="form-control" id="Slot" class="col-md-12">
                            <button type='button' onclick="addSlot()" id="AddSlot" style="color:white;">Add
                                Slot</button>
                            <div id="Slot1"></div>
                           </div>

                           <div class="col-md-12">
                            <input class="form-control" type="image" id="image" name="lab[]" placeholder="" required>
                                </div>


                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                          <label class="form-check-label">I confirm that all data are correct</label>
                         <!-- <div class="invalid-feedback">Please confirm that the entered data are all correct!</div> -->
                        </div>
                  

                            <div class="form-button mt-3">
                                <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="/javascripts/labform.js"></script>
    <script src="/javascripts/dynamic.js"></script>