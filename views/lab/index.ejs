<% layout('layouts/boilerplate')%>
<% for(let lab of labs) {%>
    <div class="flex flex-col p-10 bg-gray-100 shadow-md m-16 rounded rounded-xl px-24 space-y-12 items-center text-center">
        <h1 class="font-bold md:text-6xl text-4xl tracking-wide"><%= lab.name%> Lab</h1>
        
        <p class="text-gray-500 md:text-2xl text-xl"><%= lab.department%> Department</p>
        <p class="text-gray-500 md:text-2xl text-xl"><%= lab.college.collegename%></p>
        
        <a class="rounded bg-indigo-500 text-white text-lg py-4 px-6" href="/lab/<%= lab._id %> ">
            Check Available Slots</a>
    </div>
<% } %>